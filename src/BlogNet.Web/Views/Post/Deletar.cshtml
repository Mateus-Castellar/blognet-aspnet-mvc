@model BlogNet.Web.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Excluir post";
}

<section>
    <div class="text-center mt-5">
        <h3>Tem certeza que deseja continuar? essa ação será <span class="text-danger">permanente! :(</span></h3>

        <div class="mt-3">
            <p><strong>Nome do post: </strong>@Model.Titulo</p>
            <p><strong>Curtidas:</strong> @Model.Curtidas</p>
            <p><strong>Criado em:</strong> @Model.CriadoEm.ToString("dd 'de' MMMM yyyy")</p>
        </div>

        <form asp-action="Remover">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Voltar</a>
            <input type="submit" value="Excluir" class="btn btn-danger"/>
        </form>
    </div>
</section>

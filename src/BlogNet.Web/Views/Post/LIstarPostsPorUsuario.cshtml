@model List<BlogNet.Web.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Meus Posts";
}

<section>
    <div class="container text-center">
        @{
            if (Model.Count == 0)
            {
                <p>Você não possui posts cadastrados!</p>
                <a asp-controller="Post" asp-action="Cadastro" class="btn btn-secondary">Adicionar uma postagem!</a>
            }
            else
            {
                <h3>Meus Posts</h3>
                <p>numero de posts: @Model.Count</p>

                @foreach (var item in Model)
                {
                    <p>@item.Titulo</p>
                }
            }
        }
    </div>
</section>